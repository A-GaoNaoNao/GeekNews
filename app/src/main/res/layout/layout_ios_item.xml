<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_width="40dp"
            android:src="@drawable/ios"
            android:layout_height="40dp"/>
        <TextView
            android:id="@+id/tv_ios_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_ren"
                android:layout_width="30dp"
                android:src="@drawable/icon_me_not_selected"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/tv_ios_name"
                android:layout_toRightOf="@id/iv_ren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_biao"
                    android:layout_width="20dp"
                    android:src="@drawable/night"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/tv_ios_shi"
                    android:layout_toRightOf="@id/iv_biao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
